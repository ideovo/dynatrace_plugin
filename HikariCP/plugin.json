{
  "version": "0.01",
  "name": "custom.jmx.HikariCP-Ver1",
  "type": "JMX",
  "entity": "PROCESS_GROUP_INSTANCE",
  "metricGroup": "tech.hikariCP",
  "processTypes": [10, 12, 13, 16, 17, 18],
    "configUI" : {
        "displayName": "Hikari Connection Pool"
    },
  "metrics": [
    {
      "timeseries": {
        "key": "totalactive",
        "displayname" : "active connection count",
        "unit": "Count",
        "dimensions": [
          "rx_pid",
          "ConnectionPoolName"
        ]
      },
      "source": {
        "domain": "com.zaxxer.hikari",
        "keyProperties": {
          "type": "Pool*"
        },
        "allowAdditionalKeys": true,
        "attribute": "activeConnections",
        "calculateDelta": false,
        "calculateRate": false,
        "aggregation": "MAX",
        "splitting": {
            "name": "ConnectionPoolName",
            "type": "keyProperty",
            "keyProperty": "type"
        }
      }
    },
    {
      "timeseries": {
        "key": "totalIdle",
        "displayname" : "idle connection count",
        "unit": "Count",
        "dimensions": [
          "rx_pid",
          "ConnectionPoolName"
        ]
      },
      "source": {
        "domain": "com.zaxxer.hikari",
        "keyProperties": {
          "type": "Pool*"
        },
        "allowAdditionalKeys": true,
        "attribute": "IdleConnections",
        "calculateDelta": false,
        "calculateRate": false,
        "aggregation": "MAX",
        "splitting": {
            "name": "ConnectionPoolName",
            "type": "keyProperty",
            "keyProperty": "type"
        }
      }
    },
    {
      "timeseries": {
        "key": "totalCCon",
        "displayname" : "total connection count",
        "unit": "Count",
        "dimensions": [
          "rx_pid",
          "ConnectionPoolName"
        ]
      },
      "source": {
        "domain": "com.zaxxer.hikari",
        "keyProperties": {
          "type": "Pool*"
        },
        "allowAdditionalKeys": true,
        "attribute": "TotalConnections",
        "calculateDelta": false,
        "calculateRate": false,
        "aggregation": "MAX",
        "splitting": {
            "name": "ConnectionPoolName",
            "type": "keyProperty",
            "keyProperty": "type"
        }
      }
    }
  ],
    "ui": {
      "keycharts": [
      {
        "group": "Connection Pool",
        "title": "Hikari Connection size",
        "series": [
         {
                "key": "totalactive",
                "displayname": "Active Connection size",
                "color": "rgba(101,152,186,0.4)",
                "seriestype": "line"
         },
         {
                "key": "totalIdle",
                "displayname": "Idle Connection size",
                "seriestype": "line",
                "color" : "#bdc9ff"
          },
          {
                "key": "totalCCon",
                "displayname": "total connections size",
                "color": "#FF6666",
                "seriestype": "bar"
          }
        ]
      }
      ]
    }
}
